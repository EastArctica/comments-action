{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2019.Array", "ES2021.String"],

        "outDir": "dist",
        "rootDir": "src",

        "sourceMap": false,
        "skipLibCheck": true,

        "moduleResolution": "node",
        "esModuleInterop": true,

        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules"
    ]
}